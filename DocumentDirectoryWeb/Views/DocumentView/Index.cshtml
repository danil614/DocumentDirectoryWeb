@model List<DocumentView>

@{
    ViewData["Title"] = "Просмотр документов";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-4 mb-3 g-sm-2 text-end">
    <div class="input-group">
        <input type="text" id="searchInput" class="form-control" placeholder="Поиск" oninput="filterTable()">
        <button id="clearButton" class="btn btn-outline-secondary" type="button" onclick="clearInputFilter()">
            <i class="fa fa-times"></i>
        </button>
    </div>
</div>

<table class="table table-striped table-hover" id="dataTable">
    <thead>
    <tr>
        <th>Название документа</th>
        <th>Ознакомлен</th>
        <th>Дата ознакомления</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var document in Model)
    {
        <tr>
            <td class="align-middle">@document.Name</td>
            <td class="align-middle">@(document.IsReviewed ? "Да" : "Нет")</td>
            <td class="align-middle">@(document.ReviewDate.HasValue ? document.ReviewDate.Value.ToShortDateString() : "")</td>
            <td class="align-middle">
                <button class="btn btn-primary btn-sm"
                        onclick="openDocument('@Url.Action("Document", "DocumentView")' + '?fileId=' + '@document.Id')"
                        data-toggle="tooltip" data-placement="top" title="Просмотр">
                    Просмотр
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("Form")