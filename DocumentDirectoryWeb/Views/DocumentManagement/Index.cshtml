@model List<Document>

@{
    ViewData["Title"] = "Список документов";
}

<h1>@ViewData["Title"]</h1>

<div class="row justify-content-between">
    <div class="row mt-4 mb-3 g-sm-2 col-sm-4">
        <button class="btn btn-primary" type="button" onclick="createItem('DocumentManagement')">
            <i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Создание
        </button>
    </div>

    <div class="row mt-4 mb-3 g-sm-2 col-sm-5">
        <div class="input-group">
            <input type="text" id="searchInput" class="form-control" placeholder="Поиск" oninput="filterTable()">
            <button id="clearButton" class="btn btn-outline-secondary" type="button" onclick="clearInputFilter()">
                <i class="fa fa-times"></i>
            </button>
        </div>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Название</th>
        <th>Категория</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var document in Model)
    {
        <tr>
            <td class="align-middle">@document.Name</td>
            <td class="align-middle">@document.Category</td>
            <td class="align-middle">
                <button class="btn btn-primary" onclick="openDocument('@Url.Action("GetPdf", "DocumentView")' + '?fileId=' + '@document.Id')">
                    Просмотр
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("~/Views/DocumentView/Form.cshtml")
