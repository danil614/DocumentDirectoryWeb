@model IQueryable<User>

@{
    ViewData["Title"] = "Пользователи";
    const string controllerName = "Users";
}

<h1>@ViewData["Title"]</h1>

@await Html.PartialAsync("_MainButtonPanel", controllerName)

<table id="dataTable" class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Логин</th>
        <th>Тип пользователя</th>
        <th>ФИО</th>
        <th>Подразделение</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @await Html.PartialAsync("_Table", Model)
    </tbody>
</table>

<script>
    $(document).ready( function () {
        // Настраиваем таблицу
        const columnIndexDisableSort = 4;
        configureDataTable(columnIndexDisableSort);
    } );
</script>