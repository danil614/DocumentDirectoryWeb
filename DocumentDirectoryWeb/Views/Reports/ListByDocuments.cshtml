@model IQueryable<Document>

@{
    ViewData["Title"] = "Отчет по документам";
}

<h1>@ViewData["Title"]</h1>

<div class="accordion mt-4 mb-3" id="listByDocuments">
    @foreach (var document in Model)
    {
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#document-@document.Id" aria-expanded="false" aria-controls="document-@document.Id">
                    <ul class="list-group list-group-horizontal">
                        <li class="list-group-item">@document.Category</li>
                        <li class="list-group-item">@document.Name</li>
                    </ul>
                </button>
            </h2>
            <div id="document-@document.Id" class="accordion-collapse collapse">
                <div class="accordion-body">
                    <table class="table table-striped table-hover" id="users-@document.Id">
                        <thead>
                        <tr>
                            <th>ФИО</th>
                            <th>Логин</th>
                            <th>Подразделение</th>
                            <th>Ознакомлен</th>
                            <th>Дата ознакомления</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (document.UserDocumentReviews != null)
                        {
                            foreach (var review in document.UserDocumentReviews)
                            {
                                <tr>
                                    <td class="align-middle">@review.User?.FullName</td>
                                    <td class="align-middle">@review.User?.Login</td>
                                    <td class="align-middle">@review.User?.Department</td>
                                    <td class="align-middle">@(review.IsReviewed ? "Да" : "Нет")</td>
                                    <td class="align-middle">@(review.ReviewDate.HasValue ? review.ReviewDate.Value.ToShortDateString() : "")</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>