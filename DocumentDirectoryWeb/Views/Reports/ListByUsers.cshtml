@model IQueryable<User>

@{
    ViewData["Title"] = "Отчет по пользователям";
}

<h1>@ViewData["Title"]</h1>

<div class="accordion mt-4 mb-3" id="listByUsers">
    @foreach (var user in Model)
    {
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#user-@user.Id" aria-expanded="false" aria-controls="user-@user.Id">
                    <ul class="list-group list-group-horizontal">
                        <li class="list-group-item">@user.FullName</li>
                        <li class="list-group-item">@user.Login</li>
                        <li class="list-group-item">@user.Department</li>
                    </ul>
                </button>
            </h2>
            <div id="user-@user.Id" class="accordion-collapse collapse">
                <div class="accordion-body">
                    <table class="table table-striped table-hover" id="documents-@user.Id">
                        <thead>
                        <tr>
                            <th>Название документа</th>
                            <th>Раздел</th>
                            <th>Ознакомлен</th>
                            <th>Дата ознакомления</th>
                        </tr>
                        </thead>
                        <tbody>
                        @if (user.UserDocumentReviews != null)
                        {
                            foreach (var review in user.UserDocumentReviews)
                            {
                                <tr>
                                    <td class="align-middle">@review.Document?.Name</td>
                                    <td class="align-middle">@review.Document?.GetCategories()</td>
                                    <td class="align-middle">@(review.IsReviewed ? "Да" : "Нет")</td>
                                    <td class="align-middle">@(review.ReviewDate.HasValue ? review.ReviewDate.Value.ToShortDateString() : "")</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>